{
  "name": "intellivault",
  "version": "1.0.0",
  "description": "IntelliVault - Intelligent Document Management System",
  "scripts": {
    "setup": "bash scripts/setup/setup-dev-env.sh",
    "dev": "concurrently \"npm run dev:document\" \"npm run dev:search\" \"npm run dev:analytics\"",
    "dev:document": "cd services/document-service && npm run dev",
    "dev:search": "cd services/search-service && npm run dev",
    "dev:analytics": "cd services/analytics-service && npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "npm run build:all",
    "build:all": "concurrently \"npm run build:document\" \"npm run build:search\" \"npm run build:analytics\"",
    "build:document": "cd services/document-service && npm run build",
    "build:search": "cd services/search-service && npm run build",
    "build:analytics": "cd services/analytics-service && npm run build"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/openai": "^1.0.0-beta.7",
    "@azure/search-documents": "^12.0.0",
    "@azure/storage-blob": "^12.17.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.19.17",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "form-data": "^4.0.4",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "workspaces": [
    "services/*"
  ]
}